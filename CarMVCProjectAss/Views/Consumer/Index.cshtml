@model IEnumerable<CarMVCProjectAss.Models.Consumer>

@{
    ViewBag.Title = "Index";
}

<h2>Customer List</h2>
<br>
<button class="btn btn-primary">@Html.ActionLink("Create New Customer", "CustForm", null, new { @style = "color: white; text-decoration:none" })</button>
<hr />
@using (Html.BeginForm("Save","Consumer"))
{
    <p style="padding-left:800px">
        Search:
        @Html.RadioButton("RadB", "FirstName")Name
        @Html.RadioButton("RadB", "Email")Email
        @Html.RadioButton("RadB", "PhoneNumber")Phone
    </p>
    <p style="padding-left:800px">
        Name  : @Html.TextBox("SearchName")<br />
        <input class="btn btn-primary" type="submit" value="Search" />
    </p>

}
