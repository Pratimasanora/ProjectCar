<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Email</th>
        <th>City</th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var m in Model)
    {
        <tr>
            <td>@m.FirstName</td>
            <td>@m.LastName</td>
            <td>@m.Email</td>
            <td>@m.City</td>
            <td><button class="btn btn-primary">@Html.ActionLink("ViewCar", "CarForm", "Car", m, new { @style = "color: white; text-decoration:none" })</button></td>
            <td>
                <button class="btn btn-success">@Html.ActionLink("Details", "Details", new { m.Id }, new { @style = "color: white; text-decoration:none" })</button>
                <button class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { m.Id }, new { @style = "color: white; text-decoration:none" })</button>
                <button class="btn btn-primary">@Html.ActionLink("Edit", "CustForm", m, new { @style = "color: white; text-decoration:none" })</button>
            </td>

        </tr>
    }
</table>
